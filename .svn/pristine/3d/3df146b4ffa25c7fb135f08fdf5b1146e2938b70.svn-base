        NativeWapper.initSDK(LaunchActivity.this, "MBP123-20180705193732-mbp06-4427","mini");
        NativeWapper.startService(LaunchActivity.this, true);
        NativeWapper.setFB_intercept_status(LaunchActivity.this, true);
        NativeWapper.setFB_intercept(LaunchActivity.this, 50);
