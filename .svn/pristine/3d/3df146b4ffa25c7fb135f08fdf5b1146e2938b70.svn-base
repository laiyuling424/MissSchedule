            @Override
            public void onAdClick(String s) {
                Log.d("ATest","LaunchActivity on ad click");
            }
            @Override
            public void onAdLoaded(String s,int i, FrameLayout frameLayout) {
                if (contentAdView != null) {
                    contentAdView.removeAllViewsInLayout();
                }
                contentAdView.addView(frameLayout);
                Log.d("ATest","ad load success");
            }

            @Override
            public void loadAdFailed(String s) {
                Log.d("ATest","ad load Fail "+s);

            }
        });
        skipOnDone();
